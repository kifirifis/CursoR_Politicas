library(foreign)
library(dplyr)
list.files("data/barometro/MD3300/")


datos <- read.spss(file = "data/barometro/MD3300/3300.sav", to.data.frame = T)
head(datos)
dim(datos)
names(datos)
names(datos) <- tolower(names(datos))
names(datos)

datos <- datos %>% select(sexo, edad, ccaa, clasesocial, simpatiacat, p3) 
class(datos$edad)

datos$edad <- as.numeric(datos$edad)
str(datos)

table(datos$sexo, datos$clasesocial)

write.csv(datos, "misdatos.csv", row.names = F)
list.files()

?hist
hist(datos$edad)


library(ggplot2)
datos %>% 
        filter(sexo == "Hombre") %>% 
ggplot(aes(x = sexo, fill = clasesocial)) +
        geom_bar() +
        labs(title = "Mi titulo", 
             x = "", 
             y = "n") +
        facet_wrap(~clasesocial)

table(datos$simpatiacat)        


table(datos$sexo, datos$clasesocial)

ggplot(datos, aes(clasesocial, p3)) +
        geom_bar(stat = "identity") +
        coord_flip()
        

































